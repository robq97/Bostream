<!DOCTYPE html>
<html>
<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="css/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <nav>
        <div class="nav-wrapper orange darken-4">
            <a> @Html.ActionLink("Bostream", "Index", "Home", new { area = "" }, new { @class = "brand-logo center" })</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>@Html.ActionLink("Visión", "Index", "Home")</li>
                <li>@Html.ActionLink("Servicios", "About", "Home")</li>
                <li>@Html.ActionLink("Trabajos", "", "Home")</li>
                <li>@Html.ActionLink("Contactenos", "Contact", "Home")</li>
            </ul>
        </div>
    </nav>
 
        @RenderBody()
        <hr />
        <footer class=" page-footer grey darken-2">
            <div class="container">
                <div class="row">
                    <div class="col l6 s15">
                        <h5 class="white-text">Footer Content</h5>
                        <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
                    </div>
                    <div class="col l4 offset-l2 s12">
                        <h5 class="white-text">Links</h5>
                        <ul>
                            <li><a class="grey-text text-lighten-3" href="#!">Instagram</a></li>
                            <li><a class="grey-text text-lighten-3" href="#!">Facebook</a></li>
                            <li><a class="grey-text text-lighten-3" href="#!">Youtube</a></li>
                            <li><a class="grey-text text-lighten-3" href="#!">Email</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container">
                    &copy; @DateTime.Now.Year - Anlisis, implementación, y diseño de Sistemas
                    <a class="grey-text text-lighten-4 right" href="#!">Acceso Admin</a>
                </div>
            </div>
        </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
