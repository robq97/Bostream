@{
    ViewBag.Title = "Nueva Cotización";
}
@if (Session["username"] != null)
{
    <h3 class="center">@ViewBag.Title.</h3>
    <h3>@ViewBag.Message</h3>

    <!--HTML Form para datos para crear una nueva cotización-->
    <!---->
    <div class="container body-content">

        <div class="row">
            @using (Html.BeginForm("AddNewQuotation", "Quotation", FormMethod.Post, new { @class = "col s12 hoverable grey darken-1 z-depth-3"}))
            {
            <div class="col s12 card-panel center">
                <h6 style="margin-bottom: 2%;">Crear nueva cotización:</h6>
            </div>

            <div class="row">

                <div class="input-field input col s2 offset-s1">

                    <input id="id" type="number" name="CustomerID" class="center white-text text-accent-1 validate .left-alert" required="">
                    <label class="white-text" for="id">ID del cliente</label>
                </div>
                <div class="input-field col s3">
                    <div class="container">
                        <p>
                            <label>
                                <input name="ServiceID" type="radio" value="1" required=""/>
                                <span class="white-text">Manejo de redes sociales</span>
                            </label>
                        </p>
                        <p>
                            <label>
                                <input name="ServiceID" type="radio" value="2" />
                                <span class="white-text">Creación de contenido</span>
                            </label>
                        </p>
                    </div>
                </div>
                <div class="input-field col s2">
                    <p>
                        <label>
                            <input name="ServiceID" type="radio" value="3" />
                            <span class="white-text">Diseño gráfico</span>
                        </label>
                    </p>
                    <p>
                        <label>
                            <input name="ServiceID" type="radio" value="4" />
                            <span class="white-text">Otro</span>
                        </label>
                    </p>
                </div>

            </div>

            <div class="row">
                <div class="input-field input col s3 offset-s1">
                    <input id="ExpirationDate" name="ExpirationDate" type="text" class="datepicker validate white-text" required="">
                    <label class="white-text" for="ExpirationDate">Expiración de cotización:</label>
                </div>
                <div class="input-field input col s5">
                    <input id="Total" type="number" name="Price" class="validate white-text">
                    <label class="white-text" for="Total">Precio total ($):</label>
                </div>
            </div>
            <div class="center" style="margin-bottom: 5%">
                <button class="btn waves-effect waves-light orange darken-4" type="submit" name="action">
                    Enviar
                    <i class="material-icons right">send</i>
                </button>
            </div>
            }
        </div>
    </div>
}
@if (Session["username"] == null)
{
    Response.Redirect("~/Admin/Denied");
}