@{
    ViewBag.Title = "Tareas";
}
<h3 class="center">@ViewBag.Title.</h3>

<!--HTML Form para datos para crear una nueva tarea-->
<!---->
<div class="container body-content">
    <div class="row">
        <form class="col s12 hoverable grey darken-1 z-depth-3">
            <div class="col s12 card-panel center">
                <h6 style="margin-bottom: 2%;">Crear nueva tarea:</h6>
            </div>
            <div class="row">
                <div class="input-field input col s6 offset-s1">
                    <input id="Title" type="text" class="validate white-text">
                    <label class="white-text" for="Title">Título de la tarea:</label>
                </div>
                <div class="input-field input col s3 offset-s1">
                    <input id="ClientId" type="number" class="validate white-text">
                    <label class="white-text" for="ClientId">ID de cliente:</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s4 offset-s1">
                    <textarea id="Description" type="text" class="materialize-textarea white-text"></textarea>
                    <label class="white-text" for="Description">Descripción de tarea:</label>
                </div>
                <div class="input-field input col s3">
                    <input id="Priority" type="number" class="validate white-text">
                    <label class="white-text" for="Priority">Prioridad de tarea:</label>
                </div>
                <div class="row"> 
                    <div class="input-field input col s3">
                    <input id="Deadline" type="text" class="datepicker validate white-text">
                    <label class="white-text" for="Deadline">Fecha límite de tarea:</label>
                    </div>
                </div>
                <div class="center" style="margin-bottom: 5%">
                    <button class="btn waves-effect waves-light orange darken-4" type="submit" name="action">
                        Enviar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
