@{
    ViewBag.Title = "Nuevo Contacto";
}
<h3 class="center">@ViewBag.Title.</h3>

<br>

<!--HTML Form para datos de "Nuevo Contacto"-->
<!---->
<div class="container body-content">
        <div class="row">
            <form class="col s12 hoverable grey darken-1 z-depth-3">

                <div class="col s12 card-panel center">
                    <h6 style="margin-bottom: 2%;">Para añadir contacto:</h6>
                </div>

                <div class="row">
                    <div class="input-field input col s3 offset-s1">
                        <input id="FirstName" type="text" class="center teal-text text-accent-1 validate .left-alert" required="">
                        <label class="white-text" for="FirstName">Nombre:</label>
                    </div>
                    <div class="input-field col s3">
                        <input id="LastName" type="text" class="center teal-text text-accent-1 validate .left-alert" required="">
                        <label class="white-text" for="LastName">Apellido:</label>
                    </div>
                    <div class="input-field col s4">
                        <input id="Company" type="text" class="center teal-text text-accent-1 validate .left-alert" required="">
                        <label class="white-text" for="Company">Organización/Compañía:</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6 offset-s1">
                        <input id="Email" type="email" class="center teal-text text-accent-1 validate .left-alert" required="">
                        <label class="white-text" for="Email">Correo electrónico:</label>
                    </div>
                    <div class="input-field col s4">
                        <input id="PhoneNum" type="tel" class="center teal-text text-accent-1 validate .left-alert" required="">
                        <label class="white-text" for="PhoneNum">Número de teléfono:</label>
                    </div>
                    <div class="row">
                        <div class="input-field col s10 offset-s1">
                            <textarea id="Notes" type="text" class="materialize-textarea white-text"></textarea>
                            <label class="white-text" for="Notes">Notas adicionales:</label>
                        </div>
                    </div>
                </div>
                <div class="center" style="margin-bottom: 5%">
                    @using (Html.BeginForm("AddNewCustomer", "Customer", FormMethod.Post))
                    {
                        <button class="btn waves-effect waves-light orange darken-4" type="submit" name="action">
                            Enviar
                            <i class="material-icons right">send</i>
                        </button>
                    }
                    </div>
            </form>
        </div>
</div>