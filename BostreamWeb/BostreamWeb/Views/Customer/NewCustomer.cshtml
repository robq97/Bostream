@{
    ViewBag.Title = "Nuevo Contacto";
}
@if (Session["username"] != null)
{
    <h3 class="center">@ViewBag.Title.</h3>

    <br>

    <!--HTML Form para datos de "Nuevo Contacto"-->
    <!---->
    <div class="container body-content">
        <div class="row">
            @using (Html.BeginForm("AddCustomer", "Customer", FormMethod.Post, new { @class = "col s12 hoverable grey darken-1 z-depth-3" }))
            {
                    <div class="col s12 card-panel center">
                        <h6 style="margin-bottom: 2%;">Para añadir contacto:</h6>
                    </div>

                    <div class="row">
                        <div class="input-field input col s3 offset-s1">
                            <i class="material-icons prefix">perm_identity</i>
                            <input id="FirstName" name="FirstName" type="text" class="center white-text text-accent-1 validate .left-alert" required="">
                            <label class="white-text" for="FirstName">Nombre:</label>
                        </div>
                        <div class="input-field col s3">
                            <i class="material-icons prefix">perm_identity</i>
                            <input id="LastName" name="LastName" type="text" class="center white-text text-accent-1 validate .left-alert" required="">
                            <label class="white-text" for="LastName">Apellido:</label>
                        </div>
                        <div class="input-field col s4">
                            <i class="material-icons prefix">group</i>
                            <input id="Company" name="CompanyName" type="text" class="center white-text text-accent-1 validate .left-alert" required="">
                            <label class="white-text" for="Company">Organización/Compañía:</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s6 offset-s1">
                            <i class="material-icons prefix">email</i>
                            <input id="Email" name="Email" type="email" maxlength="320" class="center white-text text-accent-1 validate .left-alert" required="">
                            <label class="white-text" for="Email">Correo electrónico:</label>
                        </div>
                        <div class="input-field col s4">
                            <i class="material-icons prefix">phone</i>
                            <input id="PhoneNum" name="Phone" type="tel" class="center white-text text-accent-1 validate .left-alert" data-length="8" pattern="[0-9]{4}[0-9]{4}" required="">
                            <label class="white-text" for="PhoneNum">Número de teléfono:</label>
                        </div>
                        <div class="row">
                            <div class="input-field col s10 offset-s1">
                                <i class="material-icons prefix">note</i>
                                <textarea id="Notes" name="Note" type="text" class="materialize-textarea white-text"></textarea>
                                <label class="white-text" for="Notes">Notas adicionales:</label>
                            </div>
                        </div>
                    </div>
                    <div class="center" style="margin-bottom: 5%">
                            <button class="btn waves-effect waves-light orange darken-4" type="submit" name="action">
                                Enviar
                                <i class="material-icons right">send</i>
                            </button>
                    </div>
            }
            </div>
    </div>
}
@if (Session["username"] == null)
{
    Response.Redirect("~/Admin/Denied");
}